<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height_72dp"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imv_song_image"
        android:layout_width="@dimen/image_56dp"
        android:layout_height="@dimen/image_56dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingStart="@dimen/spacing_8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/neutral5"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_4dp"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/TextAppearance.App.LabelLarge"/>

        <TextView
            android:id="@+id/tv_song_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/neutral3"
            android:layout_gravity="center_vertical"
            style="@style/TextAppearance.App.LabelMedium"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_song_action"
        style="?attr/materialIconButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_24dp_outline_more_vert"
        app:iconTint="@color/neutral3" />


</LinearLayout>